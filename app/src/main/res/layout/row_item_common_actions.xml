<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:id="@+id/ivRetweet"
            android:src="@drawable/retweet_icon_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/ivRetweet"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvRetweetCount"
            tools:text="55"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/ivFav"
            android:layout_toRightOf="@id/tvRetweetCount"
            android:layout_marginLeft="15dp"
            android:src="@drawable/heart_icon_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/tvFavCount"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ivFav"
            tools:text="55"
            android:textColor="@android:color/black"/>


</RelativeLayout>