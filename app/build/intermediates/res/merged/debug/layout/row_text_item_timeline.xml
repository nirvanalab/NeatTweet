<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <RelativeLayout android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:id="@+id/textTweetSet"
      >
      <include layout="@layout/row_item_common_top"></include>
   </RelativeLayout>

   <RelativeLayout android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="80dp"
       android:layout_marginBottom="10dp"
       android:layout_below="@id/textTweetSet"
       android:id="@+id/commonActions" >
      <include layout="@layout/row_item_common_actions"
          android:layout_height="fill_parent" android:layout_width="match_parent"></include>
   </RelativeLayout>

</RelativeLayout>